<h2>Listing items</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for item <- @items do %>
    <tr>
      <td>
        <%= item.name %>
      </td>
      <td class="text-right">
        <%= link "Show", to: game_item_path(@conn, :show, @conn.assigns[:game], item), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: game_item_path(@conn, :edit, @conn.assigns[:game], item), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: game_item_path(@conn, :delete, @conn.assigns[:game], item), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New item", to: game_item_path(@conn, :new, @conn.assigns[:game]) %>
